{% extends "index.twig" %}

{% block content %}
<section class="content-wrapper main-content clear-fix">
    <hgroup class="title">
        <h1>Reservation</h1>
        <h2>Details</h2>
    </hgroup>
    <fieldset class="reservation">
        <div class="row">
            <div class="col-md-12">
                <h3>{{ reservation.personName }}</h3>
            </div>

        </div>
            {% if reservation.status == "canceled" %}
                <div class="row">
                    <div class="col-md-6">

                        <div class=" alert alert-warning center-block" role="alert">
                            <div class="row">
                                <div class="col-xs-10">This reservation is cancelled!</div>

                            </div>


                        </div></div>
                </div>
            {% endif %}
        <div class="row">
            <div class="col-md-6">
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <td>Reservation</td>
                        <td>{{ reservation.reservationDatetime }}</td>
                    </tr>
                    <tr>
                        <td>Duration</td>
                        <td>{{ reservation.duration }} h</td>
                    </tr>
                    <tr>
                        <td>Guests number</td>
                        <td>{{ reservation.guestsNumber }}</td>
                    </tr>
                    {% if reservation.personPhone != null %}
                    <tr>
                        <td>Client phone</td>
                        <td>{{ reservation.personPhone }}</td>
                    </tr>
                    {% endif %}
                    <tr>
                        <td>Details</td>
                        <td>{{ reservation.details }}</td>
                    </tr>
                    <tr>
                        <td>Reservetion way</td>
                        <td>{{ reservation.reservationWay }}</td>
                    </tr>
                    <tr>
                        <td>Restaurant</td>
                        <td>{{ reservation.restaurant.name }}</td>
                    </tr>
                    <tr>
                        <td>Created at</td>
                        <td>{{ reservation.date }}</td>
                    </tr>
                </table>
            </div>




        </div>


    </fieldset>
    <div class="row">
        <div class="col-md-1">
        <a class="btn btn-warning" href="/reservation/edit/{{ reservation.id }}"><i class="fa fa-pencil"></i> Edit</a> </div>
    {% if reservation.status != "canceled" %}
        <div class="col-md-2">
        <form method="post" action="/reservation/cancel">
            <input type="hidden" name="id" value="{{ reservation.id }}">
            <button type="submit" class="btn btn-danger">Cancel reservation</button>
        </form></div>
        {% endif %}
        <div class="col-md-1">
        <a class="btn btn-default" href="/reservation">Back to List</a>
            </div>
    </div>
</section>
{% endblock %}